{
  "name": "@olivercaine/ui-component-library",
  "author": "Oliver Caine",
  "license": "MIT",
  "version": "1.1.0-0",
  "description": "A React Storybook boilerplate for rapidly developing user interfaces",
  "main": "lib/index.js",
  "module": "lib/index.esm.js",
  "types": "lib/index.d.ts",
  "files": [
    "lib"
  ],
  "scripts": {
    "dev": "concurrently 'npm install' 'npm run storybook:start-and-test:watch'",
    "dev:docker": "docker run --rm -it -w /app -v ${PWD}:/app -p 6006:6006 $(docker build . -q) sh -c 'npm run dev'",
    "lint": "eslint -c .eslintrc --ext .ts src",
    "lint:fix": "npm run lint -- --fix",
    "storybook": "start-storybook -p 6006",
    "storybook:test": "test-storybook --browsers chromium",
    "storybook:test:watch": "npm run storybook:test -- --watch",
    "storybook:start-and-test": "start-test storybook 6006 'storybook:test'",
    "storybook:start-and-test:watch": "start-test storybook 6006 'storybook:test:watch'",
    "storybook:build": "build-storybook",
    "test": "jest --json --outputFile=.jest-test-results.json",
    "build": "rollup -c",
    "health-check": "time concurrently --group --kill-others-on-fail --timings 'npm run lint --quiet' 'npm run build' 'npm test' 'npm run storybook:build' 'npm run storybook:start-and-test'",
    "prepublishOnly": "npm build"
  },
  "husky": {
    "hooks": {
      "post-commit": "npm run lint:fix",
      "pre-push": "npm run health-check"
    }
  },
  "jest": {
    "transform": {
      ".(ts|tsx)": "ts-jest"
    },
    "modulePathIgnorePatterns": [
      "node_modules",
      "jest-test-results.json"
    ],
    "testRegex": "(/__tests__/.*|\\.(test|spec))\\.(ts|tsx)$",
    "testEnvironment": "jsdom",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ]
  },
  "np": {
    "publish": false,
    "tests": false
  },
  "keywords": [
    "storybook",
    "react",
    "typescript"
  ],
  "devDependencies": {
    "@babel/core": "^7.21.4",
    "@rollup/plugin-commonjs": "^17.0.0",
    "@rollup/plugin-node-resolve": "^15.0.2",
    "@storybook/addon-actions": "^6.5.16",
    "@storybook/addon-essentials": "^6.5.16",
    "@storybook/addon-interactions": "^6.5.16",
    "@storybook/addon-jest": "^6.5.16",
    "@storybook/addon-links": "^6.5.16",
    "@storybook/addon-postcss": "^2.0.0",
    "@storybook/builder-webpack5": "^6.5.16",
    "@storybook/core-common": "^7.0.5",
    "@storybook/jest": "0.0.10",
    "@storybook/manager-webpack5": "^6.5.16",
    "@storybook/node-logger": "^7.0.5",
    "@storybook/react": "^6.5.16",
    "@storybook/test-runner": "^0.10.0",
    "@storybook/testing-library": "0.0.13",
    "@testing-library/react": "^14.0.0",
    "@types/jest": "^29.5.1",
    "@types/react": "^18.0.35",
    "@typescript-eslint/parser": "^5.58.0",
    "babel-loader": "^9.1.2",
    "concurrently": "^8.0.1",
    "eslint": "^8.38.0",
    "eslint-config-standard": "^17.0.0",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-n": "^15.7.0",
    "eslint-plugin-no-null": "^1.0.2",
    "eslint-plugin-no-only-tests": "^3.1.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^6.1.1",
    "eslint-plugin-standard": "^5.0.0",
    "husky": "^1.3.1",
    "jest": "^29.5.0",
    "jest-environment-jsdom": "^29.5.0",
    "postcss": "^8.4.22",
    "react": "^18.2.0",
    "react-docgen-typescript-plugin": "^1.0.5",
    "react-dom": "^18.2.0",
    "rollup": "^2.79.1",
    "rollup-plugin-peer-deps-external": "^2.2.4",
    "rollup-plugin-postcss": "^4.0.2",
    "rollup-plugin-typescript2": "^0.34.1",
    "start-server-and-test": "^1.15.4",
    "ts-jest": "^29.1.0",
    "typescript": "^5.0.4"
  },
  "peerDependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "dependencies": {
    "classnames": "^2.3.2"
  }
}
